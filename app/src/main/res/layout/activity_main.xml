<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/main_frame"
            layout="@layout/moovie_list" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/sixten_dp_dim"
            android:text="@string/tv_error_message"
            android:textSize="@dimen/ten_sp_dim"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_width="@dimen/fourty_two_dp_dim"
            android:layout_height="@dimen/fourty_two_dp_dim"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>
</layout>
